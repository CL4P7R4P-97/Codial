<h5>Comments</h5>
<% for(comment of post.comments) {%>
<div><span><%= comment.user.name%> : </span><%= comment.content %><a href="/posts/deleteComment/<%= comment._id %>" > [x]</a></div>
<%}%>
<% if(locals.user) {%>
<form action="/posts/comment/<%= post._id %>" method="post">
<textarea name="content"  cols="10" rows="1" placeholder="comment here" required></textarea>
<input type="hidden" name="post" value="<%= post._id %>">
<input type="hidden" name="postUser" value="<%= locals.user %>" >
<input type="submit" value="Add Comment">
</form>
<%}%>
</div>