 
    
    <h1><%= title %></h1>

    <section>
        <% if(locals.user) {%>
        <h4>Share post</h4>
        <form action="/posts/create" method="post">
            <textarea name="content" id="" cols="30" rows="10" placeholder="What's on you mind?" required></textarea>
            <input type="submit" value="Post">
        </form>

       
        <%}%>
    </section>

    <hr>
    <section>
        <h3>See what's happening around you & your peeps</h3>
        <div>
                <% for (post of posts) {%>
                   <% if(locals.user) { %>
                    <% if(locals.user.id = post.user._id) {%>
                    <a href="/posts/deletePost/<%=post._id %>">(X)</a>
                    <% } %>
                    <% } %>
            <div><%= post.content %></div>
            <h5>Comments</h5>
           <% for(comment of post.comments) {%>
            <div><span><%= comment.user.name %> : </span><%= comment.content %><a href="/posts/deleteComment/<%= comment._id %>" > [x]</a></div>
<%}%>
            <% if(locals.user) {%>
            <form action="/posts/comment" method="post">
                <textarea name="content" id="" cols="10" rows="1" placeholder="comment here" required></textarea>
                <input type="hidden" name="post" value="<%= post._id %>">
                <input type="hidden" name="postUser" value="<%= locals.user._id %>">
                <input type="submit" value="Add Comment">
            </form>
    <%}%>
            <%}%>
        </div>
    </section>
    